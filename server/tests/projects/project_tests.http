  "tech_stack": "React, Node.js, Express, MongoDB, Socket.io, JWT, Material-UI, TensorFlow.js, Python FastAPI",
  "github_link": "https://github.com/janedoe/ai-task-manager",
  "demo_link": "https://ai-task-manager.netlify.app",
  "is_for_sale": true,
  "technical_mentor": "Prof. John Smith"
}

